{
  "tests": [
    {
      "name": "count function",
      "selector": "$[?count(@..*)>2]",
      "document": [
        {
          "a": [
            1,
            2,
            3
          ]
        },
        {
          "a": [
            1
          ],
          "d": "f"
        },
        {
          "a": 1,
          "d": "f"
        }
      ],
      "result": [
        {
          "a": [
            1,
            2,
            3
          ]
        },
        {
          "a": [
            1
          ],
          "d": "f"
        }
      ],
      "tags": [
        "function",
        "count"
      ],
      "result_paths": [
        "$[0]",
        "$[1]"
      ]
    },
    {
      "name": "single-node arg",
      "selector": "$[?count(@.a)>1]",
      "document": [
        {
          "a": [
            1,
            2,
            3
          ]
        },
        {
          "a": [
            1
          ],
          "d": "f"
        },
        {
          "a": 1,
          "d": "f"
        }
      ],
      "result": [],
      "tags": [
        "function",
        "count"
      ],
      "result_paths": []
    },
    {
      "name": "multiple-selector arg",
      "selector": "$[?count(@['a','d'])>1]",
      "document": [
        {
          "a": [
            1,
            2,
            3
          ]
        },
        {
          "a": [
            1
          ],
          "d": "f"
        },
        {
          "a": 1,
          "d": "f"
        }
      ],
      "result": [
        {
          "a": [
            1
          ],
          "d": "f"
        },
        {
          "a": 1,
          "d": "f"
        }
      ],
      "tags": [
        "function",
        "count"
      ],
      "result_paths": [
        "$[1]",
        "$[2]"
      ]
    },
    {
      "name": "non-query arg, number",
      "selector": "$[?count(1)>2]",
